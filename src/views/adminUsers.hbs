                        <option value="user">User</option>
                        <option value="premium">Premium</option>
                        <option value="admin">Admin</option>

                    </select>  
                  
                    <input class="btn btn-primary" type="button" value="update" onclick="updateUser('{{ this._id}}')"> 
                    </td>
             
                </tr>
                {{/if}}
           
              {{/each}}
        </tbody>
    </table>


     
</div>


