 </div>

<div class="container" id="product_table"> 

     

    <table id="table_1" class="table">
        <thead>
            <tr>
  
            <th scope="col"> Name</th>
            <th scope="col">Email</th>
             <th scope="col">Role</th>
            <th scope="col">Last connection</th>
            <th scope="col">Change Role</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}

              
                <tr>
  
