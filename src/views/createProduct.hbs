<main class="container" id="principal">
        <h1 class="my-3">Create Product</h1>
  
        <form id="postForm"  action="" enctype="multipart/form-data" >
          <div class="alert alert-danger" role="alert" id="errorMessage"></div>


          <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              placeholder="Super product"
              value=""
            />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
              class="form-control"
              id="description"
              name="description"
              placeholder="Product description"
              
            ></textarea>
          </div>


          <div class="mb-3" id="group_code_file">
            <div>
                <label for="Code" class="form-label">Code</label>
                <input
                type="text"
                class="form-control-file"
                id="code"
                name="code"
                placeholder="abc123"
                value=""
                />
            </div>
            <div>
                <label for="image" class="form-label">Image link </label>
            <input
              type="text"
              class="form-control"
              id="file"
              name="thumbnail"
              placeholder="yourimage.jgp"
              
             
            />

            </div>
          </div>
          <div class="mb-3" id="group_price_cat_stock">
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input
                    type="number"
                    step="0.01"
                    class="form-control"
                    id="price"
                    name="price"
                    placeholder="9.99"
                  
                    />
                </div>
        
                <div class="mb-3">
                    <label for="stock" class="form-label">Stock</label>
                    <input
                    type="number"
                    class="form-control"
                    id="stock"
                    name="stock"
                    placeholder="3"
                    
                    />
                </div>
        
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <input
                    type="text"
                    class="form-control"
                    id="previous_cat"
                    name="category"
                    placeholder="van"
                    
                    />
                </div>

    </div>
          <button id="submit" type="submit" class="btn btn-info"  onclick="">Submit</button>
        </form>
      </main>



<script src="/js/crudProducts.js"></script>