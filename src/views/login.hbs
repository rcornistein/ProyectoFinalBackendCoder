<div class="global-container">
	<div class="card login-form">
	<div class="card-body">
		<h3 class="card-title text-center">Log in to <span style="font-weight: bold;">Your<span style="color: gray;">Car </span></span> Store</h3>
		<div class="card-text">
			
			{{#if logError}}
			<div class="alert alert-danger alert-dismissible fade show" role="alert">{{error}}</div> 
			{{/if}}
			<form method="post" action="/api/users/login">
				<!-- to error: add class "has-danger" -->

				
				
				<div class="form-group">
					
				
				
					<label for="exampleInputEmail1">Email address</label>
					<input type="email" class="form-control form-control-sm" id='InputEmail' name="InputEmail" aria-describedby="emailHelp">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Password</label>
					<a href="/api/users/generatePassword" style="float:right;font-size:12px;">Forgot password?</a>
					<input type="password" class="form-control form-control-sm" name="InputPassword">
				</div>
				<button type="submit" class="btn btn-primary btn-block">Log in</button>
				
				 <a  class="btn  btn-block button__github" href="/api/users/github">   <i class=" bi bi-github"></i> Login With Github </a>  
				
				<div class="sign-up">
					Don't have an account? <a href="/api/users/signin">Create One</a>
				</div>
				{{!-- <div class="sign-up">
					Forgot your password? <a href="/api/users/generatePassword">Create a new password</a>
				</div>
				 --}}
			</form>
		</div>
	</div>
</div>
</div>


<script src="/js/login.js"></script>